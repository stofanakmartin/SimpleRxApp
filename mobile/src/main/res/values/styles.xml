<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


    <style name="TextAppearance.AppCompat.Headline.Light" parent="TextAppearance.AppCompat.Headline"/>

    <style name="TextAppearance.AppCompat.Headline.Bold" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_headline2</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline2.Light" parent="TextAppearance.AppCompat.Headline.Light">
        <item name="android:textSize">@dimen/text_headline2</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline2.Bold" parent="TextAppearance.AppCompat.Headline.Bold">
        <item name="android:textSize">@dimen/text_headline2</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.Light" parent="TextAppearance.AppCompat.Medium"/>

    <style name="TextAppearance.AppCompat.Subhead.Grey" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.Black" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.Subhead.Light" parent="TextAppearance.AppCompat.Subhead"/>

</resources>
